#macro(getMessage $code)$messageSource.getMessage($code, null, $locale)#end

<object-schema>
  <name>institute</name>
  <record> 
    <name>com.krishagni.catissueplus.core.administrative.events.InstituteDetail</name>
    
    <field>
      <caption>#getMessage("institute_identifier")</caption>
      <attribute>id</attribute>
    </field>
    
    <field>
      <caption>#getMessage("institute_name")</caption>
      <attribute>name</attribute>
    </field>

    <field>
      <caption>#getMessage("institute_activity_status")</caption>
      <attribute>activityStatus</attribute>
    </field>
  </record>
</object-schema>

